# Проверяем режим сбора профиля и работы правила
query AutoProfile($rule) from ESC_Auto_Profile {
    rule == $rule
}

# Сверка с профилем
query CheckProfileApplication($login, $src_ip, $dst_ip, $access_type) from ESC_Risk_User_Logon_Profiles_2 {
    access_type == $access_type
    and login == $login   
    and src_ip == $src_ip
    and dst_ip == $dst_ip # or dst_host == $dst_host
}

